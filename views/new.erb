<div class="main-header">
  <h2 class="main-header__title">メモを追加する</h2>
</div>
<section class="memo-main">
  <form method="post" action="/memos" class="form">
    <div class="form-item">
      <label class="form-item__label">タイトル</label>
      <input type= "text" name="title" class="form-item__titlearea">
    </div>
    <div class="form-item">
      <label class="form-item__label">内容</label>
      <textarea name="content" class="form-item__textarea"></textarea>
    </div>
    <div>
      <input type= "submit" value="保存" class="form-item__button">
    </div>
  </form>
</section>
